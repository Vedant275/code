import java.util.Scanner;

/**
 * A simple program to check if a given array of integers
 * is sorted in ascending order.
 */
public class Main {

    /**
     * Checks whether the given array is sorted in ascending order.
     *
     * @param numbers the array of integers to check
     * @return true if the array is sorted in ascending order, false otherwise
     */
    static boolean isSortedAscending(int[] numbers) {
        for (int i = 0; i < numbers.length - 1; i++) {
            // If a number is greater than its next neighbor, array is not sorted
            if (numbers[i] > numbers[i + 1]) {
                return false;
            }
        }
        return true; // Array passed all checks, hence sorted
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Step 1: Input the array size
        System.out.print("Enter the size of the array: ");
        int n = sc.nextInt();

        int[] numbers = new int[n];

        // Step 2: Input the array elements
        for (int i = 0; i < numbers.length; i++) {
            System.out.print("Enter element " + (i + 1) + ": ");
            numbers[i] = sc.nextInt();
        }

        // Step 3: Check if the array is sorted and print result
        if (isSortedAscending(numbers)) {
            System.out.println("✅ The array is already sorted in ascending order.");
        } else {
            System.out.println("❌ The array is not sorted.");
        }

        sc.close();
    }
}
