import java.util.*;
public class Main {
    static boolean checkSort(int[] numbers) {
        for (int pos = 0; pos < numbers.length - 1; pos++) {  // this function checks if the array is already sorted or not
            if (numbers[pos] > numbers[pos + 1]) {
                return false;
            }
        }
        return true;      // if the array is already sorted than the program just ends in the first if check
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the size of array");
        int n = sc.nextInt();
        int numbers[] = new int[n];
        for(int i = 0; i < numbers.length; i++){
            System.out.println("Enter the element " + (i+1));
            numbers[i] = sc.nextInt() ;
        }
        if(checkSort(numbers) == true){
            System.out.println("The array is already sorted");
        }else {
            System.out.println("The array is not sorted");
        }

    }
}
